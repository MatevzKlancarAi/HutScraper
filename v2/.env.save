# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=world_discovery
DATABASE_USER=availability_activities
DATABASE_PASSWORD=your_password_here
DATABASE_MAX_CONNECTIONS=10
DATABASE_SSL=false

# Scraping Configuration
SCRAPER_HEADLESS=true
SCRAPER_SLOW_MO=0
SCRAPER_TIMEOUT=30000
SCRAPER_MAX_CONCURRENCY=3
SCRAPER_DELAY_BETWEEN_HUTS=30000
SCRAPER_DELAY_BETWEEN_ROOMS=5000
SCRAPER_SCREENSHOTS_ENABLED=false

# Booking Configuration
BOOKING_HEADLESS=true
BOOKING_SLOW_MO=100
BOOKING_MAX_CAPTCHA_ATTEMPTS=20
BOOKING_DRY_RUN=true

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_CRON_SCRAPING=0 6,18 * * *
SCHEDULER_TIMEZONE=Europe/Ljubljana

# API Configuration
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60000
CORS_ORIGIN=*

# Optional: Cache Configuration (Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Optional: Monitoring
# SENTRY_DSN=
# METRICS_ENABLED=false




